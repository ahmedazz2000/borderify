{
    "manifest_version": 3,
    "name": "Borderify",
    "version": "1.1",
    "description": "Adds a red border to all webpages matching mozilla.org.",
    "icons": {
        "48": "icon/border-48.png"
    },
	  "permissions": [
    "webRequest", "http://*/*"
  ],
"content_security_policy": {
  "extension_pages": "default-src localhost" 
},


    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "jquery-3.6.3.min.js","borderify.js"
            ]
        }
    ]
}


